[vertex shader passthrough]

[fragment shader]
#version 430

layout(location = 0) in vec4 color_in;
layout(location = 0) out vec4 color_out;

void main() {
  color_out = color_in;
}

[test]
clear color 1 0.4 0.5 0.2
clear
relative probe rgba (0.0, 0.0) (1.0, 0.4, 0.5, 0.2)
relative probe rgba (0.2, 0.7) (1.0, 0.4, 0.5, 0.2)
relative probe rgba (0.8, 0.3) (1.0, 0.4, 0.5, 0.2)
relative probe rgba (0.9, 0.9) (1.0, 0.4, 0.5, 0.2)

clear color 0.4 0.2 1 0.5
clear
relative probe rgba (0.0, 0.0) (0.4, 0.2, 1.0, 0.5)
relative probe rgba (0.2, 0.7) (0.4, 0.2, 1.0, 0.5)
relative probe rgba (0.8, 0.3) (0.4, 0.2, 1.0, 0.5)
relative probe rgba (0.9, 0.9) (0.4, 0.2, 1.0, 0.5)
