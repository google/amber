[vertex shader]
#version 430

layout(location = 0) in vec4 position;
layout(location = 1) in vec4 vert_color;
layout(location = 0) out vec4 frag_color;

void main() {
  gl_Position = position;
  frag_color = vert_color;
}

[fragment shader]
#version 430

layout(location = 0) in vec4 frag_color;
layout(location = 0) out vec4 final_color;

void main() {
  final_color = frag_color;
}

[vertex data]
#        position     vert_color
     0/R8G8_SNORM 1/R8G8B8A8_UNORM

#           Red for entire frame
#         R8   G8     R8  G8  B8  A8
        -128 -128    255   0   0  0
         127  127    255   0   0  0
        -128  127    255   0   0  0

        -128 -128    255   0   0  0
         127  127    255   0   0  0
         127 -128    255   0   0  0

#           Green for half frame
#         R8   G8     R8  G8  B8  A8
           0 -128      0 255   0  0
         127  127      0 255   0  0
           0  127      0 255   0  0

           0 -128      0 255   0  0
         127  127      0 255   0  0
         127 -128      0 255   0  0

#         Blue for quarter frame
#         R8   G8     R8  G8  B8  A8
        -128    0      0   0 255  0
           0  127      0   0 255  0
        -128  127      0   0 255  0

        -128    0      0   0 255  0
           0  127      0   0 255  0
           0    0      0   0 255  0

#  Mixed color for quarter frame
#         R8   G8     R8  G8  B8  A8
           0    0    127 127 127  0
         127  127    127 127 127  0
           0  127    127 127 127  0

           0    0    127 127 127  0
         127  127    127 127 127  0
         127    0    127 127 127  0

[test]
clear

draw arrays TRIANGLE_LIST 0 6
relative probe rect rgba (0.0, 0.0, 1.0, 1.0) (1.0, 0, 0, 0)

draw arrays TRIANGLE_LIST 6 6
relative probe rect rgba (0.0, 0.0, 0.5, 1.0) (1.0, 0, 0, 0)
relative probe rect rgba (0.5, 0.0, 0.5, 1.0) (0, 1.0, 0, 0)

draw arrays TRIANGLE_LIST 12 6
relative probe rect rgba (0.0, 0.0, 0.5, 0.5) (1.0, 0, 0, 0)
relative probe rect rgba (0.5, 0.0, 0.5, 1.0) (0, 1.0, 0, 0)
relative probe rect rgba (0.0, 0.5, 0.5, 0.5) (0, 0, 1.0, 0)

draw arrays TRIANGLE_LIST 18 6
relative probe rect rgba (0.0, 0.0, 0.5, 0.5) (1.0, 0, 0, 0)
relative probe rect rgba (0.5, 0.0, 0.5, 0.5) (0, 1.0, 0, 0)
relative probe rect rgba (0.0, 0.5, 0.5, 0.5) (0, 0, 1.0, 0)
relative probe rect rgba (0.5, 0.5, 0.5, 0.5) (0.5, 0.5, 0.5, 0)
